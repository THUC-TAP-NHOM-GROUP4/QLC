@model IEnumerable<RequestViewModel>
@using QLC.Models.RepuestViewModel
@using QLC.Models.UserViewModel
@using QLC.Business

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading page-header">Approver</div>
    <div class="panel-body">
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Request Name</th>
                    <th>Start Date</th>
                    <th>Finish Date</th>
                    <th>Into Money</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ResquestName</td>
                        <td>@item.StartDate</td>
                        <td>@item.FinishDate</td>
                        <td>@item.Money</td>
                        <td>@item.StatusName</td>
                        <td>
                            <a data-toggle="modal" class="btn btn-info" asp-action="EditRequest" asp-route-RequestId="@item.RequestId" data-target="#modal-action-approver">
                                <i class="glyphicon glyphicon-pencil">Edit</i>
                            </a>  
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-approver", AreaLabeledId = "modal-action-approver-label", Size = ModalSize.Medium })

@section scripts{
    <script src="~/js/approver.js" asp-append-version="true"></script>
}