@model RequestViewModel
@using QLC.Models.UserViewModel
@using QLC.Models.RepuestViewModel

<form asp-action="AddRequest" id="AddRequest" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Add Request" })
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="ResquestName" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="ResquestName" id="resquestName" class="form-control" />
                    </div>
                    <span style="color:red" id="errRequestName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="StartDate" class="form-control" type="datetime" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FinishDate" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="FinishDate" class="form-control" type="datetime" />
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Amount" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Amount" class="form-control" type="number" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Price" class="form-control" type="number" />
                    </div>
                </div>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="ContentName" class="col-lg-6 col-sm-6 control-label"></label>
            <div class="col-lg-12">
                <input asp-for="ContentName" class="form-control" type="text" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContentName" class="col-lg-6 col-sm-6 control-label"></label>
            <div class="col-lg-12">
                <input asp-for="ContentName" class="form-control" type="text" />
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooterRequest", new ModalFooter { })
</form>

@section scripts{
    <script>
    $(document).ready(function () {
        $('#AddRequest').validate({
            onclick: false,
            rule: {
                state: "required"
            },
            messages: {
                state: {
                    required: "THe State is required!"
                }
            },
            errRequestName: function (error, element) {
                alert("loi");
            },
            submitHandler: function (form) {

                alert("success");
                return false;
            }
        });
    });
    </script>
}

