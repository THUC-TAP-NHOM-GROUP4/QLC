@model RequestViewModel
@using QLC.Models.UserViewModel
@using QLC.Models.RepuestViewModel


<form asp-action="EditRequest" id="EditRequestApp" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Edit Request" })
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group" hidden>
                    <label asp-for="RequestId" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="RequestId" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ResquestName" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="ResquestName" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="StartDate" readonly type="text" class="form-control" />
                    </div>

                </div>

                <div class="form-group">
                    <label asp-for="FinishDate" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="FinishDate" readonly type="text" class="form-control" />
                    </div>
                </div>

            </div>

            <div class="col-lg-6">

                <div class="form-group">
                    <label asp-for="Amount" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Amount" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Price" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="StateId" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="StateId" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="UserId" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="UserId" readonly class="form-control" />
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="ContentName" class="col-lg-6 col-sm-6 control-label"></label>
                <div class="col-lg-12">
                    <input asp-for="ContentName" readonly class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Note" class="col-lg-6 col-sm-6 control-label"></label>
                <div class="col-lg-12">
                    <input asp-for="Note" readonly class="form-control" />
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>
